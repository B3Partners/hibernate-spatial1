<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@test.geovise.com/orcl</property>
        <property name="hibernate.connection.username">hbs</property>
        <property name="hibernate.connection.password">hbs</property>

        <property name="hibernate.dialect">org.hibernatespatial.oracle.OracleSpatial10gDialect</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>


        <!-- Enable Hibernate's automatic session context management -->
        <property name="current_session_context_class">thread</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!-- Add HBM files -->
        <mapping resource="org/hibernatespatial/oracle/test/model/Lrs2d.hbm.xml"/>
        <!--<mapping resource="org/hibernatespatial/oracle/test/model/Lrs2dm.hbm.xml"/>-->
        <!--<mapping resource="org/hibernatespatial/oracle/test/model/Lrs3d.hbm.xml"/>-->
        <!--<mapping resource="org/hibernatespatial/oracle/test/model/Lrs3dm.hbm.xml"/>-->

    </session-factory>
</hibernate-configuration>
